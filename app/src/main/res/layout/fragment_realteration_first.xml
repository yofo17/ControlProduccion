<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextF"
        android:inputType="text"
        android:hint="@string/buscar"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView5"
        android:layout_alignRight="@+id/btn_fr1"
        android:layout_alignEnd="@+id/btn_fr1"
        android:layout_marginTop="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView5"
        android:src="@drawable/find"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:layout_above="@+id/linearLayout10" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lv_fr1"
        android:layout_weight="1"
        android:choiceMode="singleChoice"
        android:listSelector="@drawable/list_selector"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btn_fr1"
        android:layout_below="@+id/linearLayout10" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/seleccionar"
        android:id="@+id/btn_fr1"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:background="@drawable/boton_selector"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/editTextF"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/linearLayout10"
        android:paddingTop="5dp">

        <TextView
            android:text="BarCode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/textView87"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/button_border" />

        <TextView
            android:text="Requerid Date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/textView88"
            android:gravity="center"
            android:background="@drawable/button_border"
            android:layout_weight="1" />

        <TextView
            android:text="Customer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/textView89"
            android:gravity="center"
            android:background="@drawable/button_border"
            android:layout_weight="2" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView100"
        android:gravity="center"
        android:layout_alignTop="@+id/editTextF"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/editTextF"
        android:layout_toEndOf="@+id/editTextF"
        android:layout_above="@+id/linearLayout10" />
</RelativeLayout>